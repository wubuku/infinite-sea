<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"[]>
<hibernate-mapping package="org.dddml.suiinfinitesea.domain.map">
  <class name="AbstractMapLocationEvent" table="map_location_event" abstract="true">
    <composite-id name="mapLocationEventId" class="org.dddml.suiinfinitesea.domain.map.MapLocationEventId">
      <key-property name="mapId">
        <column name="map_location_id_map_id" sql-type="VARCHAR(66)" />
      </key-property>
      <key-property name="coordinatesX">
        <column name="map_location_id_coordinates_x" />
      </key-property>
      <key-property name="coordinatesY">
        <column name="map_location_id_coordinates_y" />
      </key-property>
      <key-property name="version">
        <column name="version" sql-type="DECIMAL(20,0)" />
      </key-property>
    </composite-id>
    <discriminator column="event_type" type="string" />
    <property name="createdBy" column="created_by" />
    <property name="createdAt" column="created_at" />
    <property name="commandId" column="command_id" />
  </class>
</hibernate-mapping>
